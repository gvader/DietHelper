<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/MealCategoryPreferenceParentLayout"
        android:orientation="vertical">

        <com.gvader.diethelper.ui.Settings.CategoryView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/MealCategoryPreferenceAddCategoryButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#555"
            android:layout_gravity="center"
            android:textColor="#FFF"
            android:text="@string/meal_category_preference_add_category"
            android:paddingLeft="5dp"
            android:paddingStart="5dp" />
    </LinearLayout>
</LinearLayout>